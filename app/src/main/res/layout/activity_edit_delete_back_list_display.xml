<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.learning.suman.reviewtestappver2.EditDeleteBackListDisplay"
    android:id="@+id/editDeleteBackRelativeLayout">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/editDeleteBackListView"
        android:background="#303030"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Delete the book?"
        android:id="@+id/confirmDeleteTextView"
        android:layout_alignTop="@+id/editDeleteBackListView"
        android:layout_marginTop="48dp"
        android:layout_alignRight="@+id/editDeleteBackListView"
        android:layout_alignEnd="@+id/editDeleteBackListView"
        android:background="#ffffff"
        android:textAlignment="center" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/confirmDeleteButton"
        android:layout_below="@+id/confirmDeleteTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/confirmCancelButton"
        android:layout_toStartOf="@+id/confirmCancelButton"
        android:onClick="deleteWishListBook" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/confirmCancelButton"
        android:layout_below="@+id/confirmDeleteTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="cancelDeleteWishListBook" />
</RelativeLayout>
